<h1>New game</h1>
<ul class="d-flex list-unstyled">
  <%@letters.each do |letter| %>
    <li class="border border-primary p-3 m-3"><%= letter.capitalize %></li>
    <% end %>

</ul>
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join(",") %>
  <label for="answer" class="form-label ms-2">what is the longest word you can find ?</label>
  <input type="text" name="guess" class="ms-2" id="answer">
  <input type="submit" value="send">
</form>
